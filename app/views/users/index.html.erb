<h1>Listing users</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Password</th>
    <th colspan="3"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.password %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td> 
    </tr>
  <% end %>
</table>

<%= link_to 'New user', new_user_path %>
